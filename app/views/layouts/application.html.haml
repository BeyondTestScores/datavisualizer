!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Edcontext
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body.container
    = render 'header'
    .container.p-3
      - if notice
        %p#notice= notice
      - if alert
        %p#alert= alert

      = yield

    = render 'footer'
