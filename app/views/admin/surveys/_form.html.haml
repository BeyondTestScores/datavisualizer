= bootstrap_form_with url: [:admin, @survey], model: @survey, local: true do |f|

  - if @survey.errors.any?
    #error_explanation
      %h4
        = pluralize(@survey.errors.count, "error")
        prohibited
        this survey from being saved:
      %ul
        - @survey.errors.full_messages.each do |msg|
          %li= msg


  = f.text_field :name

  =# f.collection_check_boxes :question_ids, Question.all, :id, :text, { class: 'tree-category-question-selector-target' }
  =# render "tree", template: "selector", show_questions: true

  %br
  %p= f.submit @survey.new_record? ? "Create" : "Update"
