- missing_administrative_measure = SchoolTreeCategory.missing_administrative_measure
- incomplete_tree_categories = (TreeCategory.incomplete + TreeCategory.missing_administrative_measure).uniq
- unless missing_administrative_measure.empty? && incomplete_tree_categories.empty?
  .missing
    %h3.error Missing
    %p The following items are missing or incomplete.
    %ul
      - incomplete_tree_categories.each do |tree_category|
        %li{class: "tree-category-#{tree_category.id}"}
          = "#{tree_category} needs a subcategory, questions, or an administrative measure:"
          = link_to "Fix category >", [:admin, tree_category.tree, tree_category.category], class: 'error'
